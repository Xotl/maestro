
  <%if(guest){%>
    <h3 class="user-options-title">Anonymous</h3>
      <p style="margin: 0;padding-top: 17px;font-size: 12px;">
        Sign in to get advanced privileges
      </p>
      <a class="sign-in" href="../auth/sign_in">Sign In</a>
      <a class="sign-up" href="../auth/sign_up">Sign Up</a>
  <% }else{ %>
    <h3 class="user-options-title" style="margin-bottom: 7px;">Welcome
      <%if(req.session.is_admin){ %>
        Administrator
      <% }else{ %>
        User
      <% } %>
    </h3>
    <p style="margin: 0;padding-top: 5px;font-size: 13px;"><%=req.session.email%></p>
    <a class="sign-out" href="../auth/sign_out">Sign Out</a>
  <% } %>
