<div class="row" style="padding-top: 30px;">
  <div class="col-md-12" style="padding-left: 0;">
    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs" style="height: 700px;">
      <li class="active"><a href="#a" data-toggle="tab">Tools</a></li>
      <li><a href="#b" data-toggle="tab">Projects</a></li>
      <li><a href="#c" data-toggle="tab">Users</a></li>
      </ul>
      <div class="tab-content">
      <div class="tab-pane active" id="a">
        <div class="col-md-10 category" style="padding: 8px 15px;margin-bottom: 20px;list-style: none;background-color: #f5f5f5;border-radius: 4px;"><a>Services</a></div>
        <div class="col-md-10">
        <% tools.forEach(function(tool)  { %>
          <%if(tool.category == 'dev'){%>
          <div class="col-sm-4">
            <div style="width: 100%;margin-bottom:5px; border:1px solid #CCC; min-height: 70px;">
            <%if(tool.icon){%>
              <img src="../images/<%tool.name%>42.png" style="float: left;margin-right: 5px;" />
            <% }else{ %>
              <div style="float: left;padding: 5px;">
                <img src="../images/default_tool.png" />
              </div>
            <% } %>
            <%if(tool.tool_url){%>
              <a href="<%=tool.tool_url%>" target="_blank"><%=tool.dname%></a>
            <% }else{ %>
              <a><%=tool.dname%></a>
            <% } %>
            <div style="width: 60px;float: right;font-size: 11px;text-align: center;">
              <div style="background-color: #F0D705;">Workload</div>
              <div style="background-color: #7DC068;  color: white;">Backup</div>
            </div>
              <p><%=tool.desc%></p>
            </div>
          </div>
          <% } %>
        <% }); %>
        </div>
        
        <div class="col-md-10 category" style="padding: 8px 15px;margin-bottom: 20px;list-style: none;background-color: #f5f5f5;border-radius: 4px;"><a>Defect tracker integrations</a></div>
        <div class="col-md-10">
          <% defect_tracker.forEach(function(df)  { %>
            <div class="col-sm-4">
              <div style="width: 100%; height: 90px; margin-bottom:5px; border:1px solid #CCC;">
                <h4><%=df.dname%></h4>
                <p><%=df.desc%></p>
              </div>
            </div>
          <% }); %>
        </div>
        <div class="col-md-10 category" style="padding: 8px 15px;margin-bottom: 20px;list-style: none;background-color: #f5f5f5;border-radius: 4px;"><a>Authentication provider</a></div>
        <div class="col-md-10">
          <div class="col-sm-4">
            <div style="width: 100%; height: 90px; margin-bottom:5px; border:1px solid #CCC;"></div>
          </div>
        </div>
      </div>
      <div class="tab-pane" id="b">
        
      </div>
