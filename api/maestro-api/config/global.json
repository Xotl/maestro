{
  "App": {
    "Name": "maestro-api"
  },
  "API": {
    "Prefix": "api",
    "ver1": "1.0",
    "DefaultVersion": "1.0"
  },
  "Data" : {
    "Flavor": "redis"
  },
  "redis": {
    "port": 6379,
    "host": "127.0.0.1",
    "db": 1
  },
  "Server": {
    "Port": 8080,
    "Name": "maestro-api",
    "DefaultVersion": "1.0.0",
    "Acceptable": [ "application/json" ],
    "ThrottleRate": 50,
    "ThrottleBurst": 100
  },
  "Logging": {
    "Name": "AuditLogging",
    "Dir": "./logs/",
    "Loggly": {
      "Enabled": false,
      "Tags": [ "maestro-api" ],
      "Endpoint": ""
    }
  },
  "CORS": {
    "Credentials": false,
    "Origins": [],
    "Headers": []
  },
  "Security": {
    "UseAuth": true,
    "UseACL": true,
    "Scheme": "Custom",
    "StringToSign": "X-Custom-Date",
    "AllowAnonymous": true,
